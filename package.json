{
  "name": "jobtracker",
  "productName": "JobTracker",
  "author": "Vasilis Mourtzis <vasilis.mourtzis@outlook.com>",
  "version": "1.0.0",
  "beta_version": "1",
  "ReleaseTitle": "",
  "description": "An easy-to-use and stylish Job tracking application",
  "main": "main.js",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "BMourtzis",
      "repo": "JobTracker"
    },
    "appId": "me.vasileiosmourtzis.jobtracker",
    "asar": true,
    "electronVersion": "1.6.11",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "npmRebuild": false
  },
  "scripts": {
    "start": "electron main.js",
    "rebuild": "",
    "pack": "build --publish never",
    "rebuild_sqlite3": "npm run configure_sqlite3 && npm run build_sqlite3",
    "configure_sqlite3": "cd node_modules/sqlite3 && npm run prepublish && node-gyp configure --module_name=node_sqlite3 --module_path=../lib/binding/electron-v1.6-win32-x64",
    "build_sqlite3": "cd node_modules/sqlite3 && node-gyp rebuild --target=1.6.11 --arch=x64 --target_platform=win32 --dist-url=https://atom.io/download/atom-shell --module_name=node_sqlite3 --module_path=../lib/binding/electron-v1.6-win32-x64",
    "mac_rebuild_sqlite3": "npm run mac_configure_sqlite3 && npm run mac_build_sqlite3",
    "mac_configure_sqlite3": "cd node_modules/sqlite3 && npm run prepublish && node-gyp configure --module_name=node_sqlite3 --module_path=../lib/binding/electron-v1.6-mac-x64",
    "mac_build_sqlite3": "cd node_modules/sqlite3 && node-gyp rebuild --target=1.6.11 --arch=x64 --target_platform=mac --dist-url=https://atom.io/download/atom-shell --module_name=node_sqlite3 --module_path=../lib/binding/electron-v1.6-mac-x64",
    "postinstall": "electron-builder install-app-deps && npm run rebuild_sqlite3",
    "test": "jest"
  },
  "keywords": [
    "JobTracker",
    "Electron"
  ],
  "license": "GPL-3.0",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "bootstrap-notify": "^3.1.3",
    "datejs": "^1.0.0-rc3",
    "docxtemplater": "^3.0.3",
    "electron-is-dev": "^0.1.2",
    "electron-updater": "^2.4.3",
    "eonasdan-bootstrap-datetimepicker-npm": "^4.17.37",
    "fullcalendar": "^3.4.0",
    "jquery": "2.2",
    "jsrender": "^0.9.83",
    "jszip": "^2.6.1",
    "less": "2.7.1",
    "moment": "^2.14.1",
    "nan": "^2.5.1",
    "numeral": "^2.0.4",
    "sequelize": "^3.30.1",
    "sqlite": "^2.3.0",
    "vue": "^2.4.1"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "1.6.11",
    "electron-builder": "^19.2.2",
    "electron-builder-squirrel-windows": "^18.6.0",
    "electron-debug": "^1.1.0",
    "jest": "^20.0.4",
    "spectron": "^3.2.3"
  }
}
